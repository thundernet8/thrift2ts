{
	"compilerOptions": {
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"allowJs": true,
		"target": "es2015",
		"lib": [
			"es2016"
		],
		"module": "commonjs",
		"noImplicitAny": false,
		"removeComments": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"baseUrl": "./src",
		"strictNullChecks": false,
		"noUnusedLocals": true,
        "outDir": "./lib"
	},
	"include": [
		"./src/**/*.ts",
		"./src/*.d.ts"
	],
	"exclude": [
		"node_modules",
		"**/*.spec.ts?",
		"lib"
	],
    "typeRoots": [
      "node_modules/@types"
    ]
}